<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox alignment="TOP_CENTER" spacing="20.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.doenerwo.frontend.StartScreenController">

    <GridPane alignment="CENTER" hgap="10" vgap="10"
              styleClass="root">

        <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
        </padding>

        <Label text="DÖNERWO"
               GridPane.columnIndex="0" GridPane.rowIndex="0"
               GridPane.columnSpan="2">
            <font>
                <Font name="System Bold" size="25.0"/>
            </font>
        </Label>

        <Text text="Let's start a new game, shall we?"
              GridPane.columnIndex="0" GridPane.rowIndex="1"
              GridPane.columnSpan="2"/>

        <Label text="Enter Username: "
               GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="username"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Choose lobby size: "
               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="lobbySizeCombo" value="2 Players"
                  GridPane.columnIndex="1" GridPane.rowIndex="3">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="2 Players"/>
                    <String fx:value="3 Players"/>
                    <String fx:value="4 Players"/>
                </FXCollections>
            </items>
        </ComboBox>

        <HBox spacing="10" alignment="bottom_right"
              GridPane.columnIndex="1" GridPane.rowIndex="5">
            <Button text="Dönersuche"
                    onAction="#onRegisterButtonClick"/>
        </HBox>
    </GridPane>

    <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true"
               preserveRatio="true">
        <Image url="@doenerlove"/>
    </ImageView>

    <Label fx:id="welcomeText"
           GridPane.rowIndex="6"/>
</VBox>
